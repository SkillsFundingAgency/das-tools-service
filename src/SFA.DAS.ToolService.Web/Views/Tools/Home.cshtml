@{
    ViewData["Title"] = "Home";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Tool Service
        </h1>

        <p class="govuk-body">List of services</p>

        <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
            Message Service
            </dt>
            <dd class="govuk-summary-list__value">
            A secure way to send contextless one time messages.
            </dd>
            <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href=@Url.Content("~/Messages")>
                Open<span class="govuk-visually-hidden"> message service</span>
            </a>
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
            Whitelist Service
            </dt>
            <dd class="govuk-summary-list__value">
            Add ACL entries for your resources.
            </dd>
            <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href=@Url.Content("~/Whitelist")>
                Open<span class="govuk-visually-hidden"> whitelist service</span>
            </a>
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
            Logs
            </dt>
            <dd class="govuk-summary-list__value">
            View application logs.
            </dd>
            <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="https://dev-elk.fasst.org.uk/" target="_blank" rel="external">
                Open<span class="govuk-visually-hidden"> logs</span>
            </a>
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
            Service Health
            </dt>
            <dd class="govuk-summary-list__value">
            View the health of the service.
            </dd>
            <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="http://status.apprenticeships.education.gov.uk" target="_blank" rel="external">
                Open<span class="govuk-visually-hidden"> service health</span>
            </a>
            </dd>
        </div>
            <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
            Metrics
            </dt>
            <dd class="govuk-summary-list__value">
            View or create graphs using service metrics.
            </dd>
            <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="https://grafana.apprenticeships.education.gov.uk/login/github" target="_blank" rel="external">
                Open<span class="govuk-visually-hidden"> graphs</span>
            </a>
            </dd>
        </div>
        </dl>
    </div>
</div>