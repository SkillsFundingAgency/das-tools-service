@using SFA.DAS.ToolService.Web.Controllers;
@using SFA.DAS.ToolService.Web.Controllers.Admin;
@using SFA.DAS.ToolService.Web.Extensions;

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Tool Service</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/main.css" media="screen" rel="stylesheet" />
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>

<body class="govuk-template__body {{ bodyClass }}">
    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <header class="govuk-header das-header " role="banner" data-module="header">
        <div class="govuk-header__container govuk-width-container">
            <div class="govuk-header__content">
                <a asp-controller="@typeof(ToolsController).GetControllerName()" asp-action="@nameof(ToolsController.Home)" class="govuk-header__link govuk-header__link--service-name">
                    Tool Service
                </a>
            </div>
            <span id="navigation" class="govuk-header__navigation das-float-right" aria-hidden="true">

                @if (User.IsInRole(ApplicationConstants.AdminRole) & (Context.Request.Path != "/"))
                {
                    <a class="govuk-header__link" asp-controller="@typeof(AdminController).GetControllerName()" asp-action="@nameof(AdminController.Index)">
                        Admin
                    </a>
                }

                @if (User.Identity.IsAuthenticated & (Context.Request.Path != "/"))
                {
                    <a class="govuk-header__link" asp-controller="@typeof(AccountController).GetControllerName()" asp-action="@nameof(AccountController.Logout)">
                        Logout
                    </a>
                }
            </span>
        </div>
    </header>
    <div class="govuk-width-container">
        <div class="govuk-phase-banner">
            <p class="govuk-phase-banner__content">
                <strong class="govuk-tag govuk-phase-banner__content__tag">
                    preview
                </strong>
                <span class="govuk-phase-banner__text">
                    This tool is for development purposes only.
                </span>
            </p>
        </div>

        <main class="govuk-main-wrapper " id="main-content" role="main">

            @RenderBody()
        </main>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</body>
</html>
