@{
    ViewData["Title"] = "Admin Services";
    @model AddApplicationViewModel
    @using SFA.DAS.ToolService.Web.Controllers.Admin
    @using SFA.DAS.ToolService.Web.Extensions
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">Add an application</h1>

        <form asp-controller="@typeof(AdminApplicationController).GetControllerName()" asp-action="@nameof(AdminApplicationController.AddApplication)" method="post">
            <div class="govuk-form-group">
                <label asp-for="Name" class="govuk-label">
                    Name
                </label>
                <input asp-for="Name" class="govuk-input govuk-input--width-20" type="text" required />
            </div>
            <div class="govuk-form-group">
                <label asp-for="Description" class="govuk-label">
                    Description
                </label>
                <input asp-for="Description" class="govuk-input govuk-input--width-20" type="text" required />
            </div>
            <div class="govuk-form-group">
                <label asp-for="Path" class="govuk-label">
                    Path
                </label>
                <span asp-fpr="Path" class="govuk-hint">
                    This is the path to your application. It can be either relative (~/my-app) or absolute (https://my-app.com)
                </span>
                <input asp-for="Path" class="govuk-input govuk-input--width-20" type="text" required />
            </div>
            <div class="govuk-form-group">
                <button class="govuk-button" data-module="govuk-button">
                    Save and continue
                </button>
            </div>
        </form>
    </div>
</div>
