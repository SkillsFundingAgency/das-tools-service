@{
    ViewData["Title"] = "Admin Services";
    @model ManageApplicationsViewModel;
    @using SFA.DAS.ToolService.Web.Controllers.Admin
    @using SFA.DAS.ToolService.Web.Extensions
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">Manage applications</h1>

        <form asp-controller="@typeof(AdminApplicationController).GetControllerName()" asp-action="@nameof(AdminApplicationController.ManageApplicationsHandleChoice)" method="post">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-radios">
                        @foreach (var action in Enum.GetValues(typeof(ManageApplicationActions)).Cast<ManageApplicationActions>())
                        {
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="@action" name="Action" type="radio" value="@action" required>
                                <label class="govuk-label govuk-radios__label" for="@action">
                                    @action.GetDescription()
                                </label>
                            </div>
                        }
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
        </form>
    </div>
</div>
